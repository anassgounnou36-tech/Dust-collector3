SJOE_ONCHAIN_REWARD_DISCOVERY=true

# ---------- ABI Path (relative to project root) ----------
TRADERJOE_SJOE_STAKING_ABI_PATH=./abi/traderjoe_sjoe_staking.json

# Ban synthetic reward execution unless explicitly allowed
