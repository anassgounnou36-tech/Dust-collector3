# =========================
# Core Execution Settings
# =========================
DB_PATH=./data/bot.db
MOCK_MODE=false                # true = never broadcast, allows placeholder recipients
DRY_RUN_ONLY=true             # true = build & simulate, skip send
USE_MEMORY_DB=false
EXECUTION_ENABLED=true         # master kill switch for broadcasting
DEV_LOWER_THRESHOLDS=false     # dev/testing: relax profit/min USD thresholds

# =========================
# Recipient / Safety
# =========================
# Mandatory when MOCK_MODE=false. Must be a controlled wallet you own.

# ---------- Wallet / Claim Settings ----------
# Comma-separated list of wallet addresses to scan for pending rewards
TARGET_WALLETS=0xe816F3dB12Db343FAF01B0781F9fE80122FA7E7D
# Where claimed rewards (if any) should be sent (some strategies forward)
DEFAULT_CLAIM_RECIPIENT_AVAX=0xe816F3dB12Db343FAF01B0781F9fE80122FA7E7D

# ---------- Harvest Behavior ----------
# If true, attempt a no-op harvest (deposit(0) first; fallback withdraw(0))
SJOE_ENABLE_HARVEST=true
# If true, simulate (dry-run) harvest only; if false, actual tx flow (depends on your framework)
SJOE_HARVEST_DRY_RUN=true

# If/when Tron claims are active; can be base58 or hex depending on your client layer:
DEFAULT_CLAIM_RECIPIENT_TRON=TYourTronBase58Address

TRADERJOE_SJOE_STAKING_ADDRESS=0x8E3cD85B0aC8352e04a07928d7881C516841Eea0
